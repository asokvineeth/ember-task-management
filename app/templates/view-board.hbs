<nav class="navbar navbar-light bg-light justify-content-between col-sm-12">
  <h1 class="navbar-brand">{{model.name}}</h1>
  <form class="form-inline">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        {{#link-to 'board'}}Board List{{/link-to}}
      </li>
    </ul>
  </form>
</nav>
<div class="container">
  <div class="col-sm-4 mb-3 left-33 mt-4">
    <div class="border">
      <div class="card-body">
        <div class="input-group mb-3">
          {{input type="text" placeholder="New List Name" value=newListName class="form-control" required=true}}
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" {{action "createList" newListName model.id}} type="button">Add List</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex flex-row mb-4 scroll-container">
    <div class="d-flex flex-row board-list" id="board{{model.boardId}}">
      {{#each model.lists as |list| }}
        <div class="border mr-4 handleList nested-1" data-boardId="{{model.id}}">
          {{task-list list=list boardId=model.id updateListAction='updateListAction' deleteListAction='deleteListAction'}}
        </div>
      {{/each}}
    </div>
  </div>
</div>
